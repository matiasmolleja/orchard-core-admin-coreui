@model CreatePartViewModel
<zone name="PageTitle">
    <h1 class="page-title">@RenderTitleSegments(T["New Content Part"])</h1>
</zone>


<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            @T["New Content Part"]
        </div>
        <div class="card-body">
            <form asp-action="CreatePart">
                @Html.ValidationSummary()
                <fieldset class="form-group">
                    <label for="Name">@T["Name"]</label>
                    <input asp-for="Name" class="form-control" autofocus="autofocus" />
                    <span class="hint">@T["Use no spaces or special characters. For example, \"MyCustomPart\""]</span>
                </fieldset>
                <fieldset class="form-group">
                    <button class="btn btn-primary" type="submit">@T["Create"]</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>
<h1></h1>

