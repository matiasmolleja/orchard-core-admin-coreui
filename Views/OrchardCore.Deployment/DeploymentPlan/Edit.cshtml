@model EditDeploymentPlanViewModel

<zone name="PageTitle">
    <h1 class="page-title">@RenderTitleSegments(T["Edit Deployment Plan"])</h1>
</zone>

    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                @T["Edit Deployment Plan"]
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly"></div>
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group" asp-validation-class-for="Name">
                        <label asp-for="Name">@T["Name"]</label>
                        <span asp-validation-for="Name" class="text-danger">@T["The name is required."]</span>
                        <input asp-for="Name" class="form-control" autofocus />
                    </div>

                    <fieldset>
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">@T["Save"]</button>
                            <a class="btn btn-secondary" asp-route-action="Index">@T["Cancel"]</a>
                        </div>
                    </fieldset>
                </form>

            </div>
        </div>
    </div>


